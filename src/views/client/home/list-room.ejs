<%- include('../layout/header.ejs') %>


<main class="container section page-rooms">
    <header class="section-head with-action">
        <h2>Danh sách phòng </h2>
        <!-- <a class="btn primary" href="/rooms/add">+ Thêm phòng mới</a> -->
    </header>

 <!-- Thông báo flash -->
<% if (message) { %>
<div class="alert <%= message.type %>">
  <span class="alert-icon">
    <%= message.type === 'success' ? '✅' : '⚠️' %>
  </span>
  <span class="alert-text"><%= message.mess %></span>
  <button class="alert-close" onclick="this.parentElement.style.display='none';">&times;</button>
</div>
<% } %>
    <br>

    <% if (!rooms || rooms.length === 0) { %>
    <div class="empty-state">Hiện không có phòng trống nào.</div>
    <% } else { %>
    <div class="row">
        <% rooms.forEach(room => { %>
        
        <div class="card room-card">
            <div class="thumb">
                  <% const firstImage = room.HinhAnh ? room.HinhAnh.split(',')[0] : 'default.jpg'; %>
                <img src="admin/uploads/anhphong/<%= firstImage.trim() %>" alt="<%= room.TenLoaiPhong %>" >
            </div>

            <div class="card-body">
                <h3 class="title">
                    Phòng <%= room.SoPhong %> - <%= room.TenLoaiPhong %>
                </h3>

                <p class="meta">
                    Tầng: <strong><%= room.ViTriTang %></strong><br>

                    Giá:
                    <strong>
                        <%= (room.Gia || 0).toLocaleString('vi-VN') %>₫ / đêm
                    </strong>
                </p>
            </div>

            <div class="card-footer card-actions">
                <!-- Nút xem chi tiết phòng -->
                <a class="btn small primary" href="/rooms/<%= room.MaPhong %>">
                    Xem chi tiết
                </a>
            </div>
        </div>
        
        <% }) %>
    </div>
    <% } %>
</main>

<%- include('../layout/footer.ejs') %>
