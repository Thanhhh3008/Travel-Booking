<style>
    /* Style cho Sidebar */
    .sidebar {
        width: 280px; /* Cố định chiều rộng */
        transition: all 0.3s;
    }

    /* Style cho tiêu đề nhóm (Sidebar Header) */
    .sidebar-header {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: #6c757d; /* Màu xám mờ */
        margin-bottom: 0.5rem;
        padding-left: 1rem;
        font-weight: 700;
    }

    /* Hiệu ứng hover cho link */
    .nav-link {
        padding: 0.8rem 1rem;
        border-radius: 6px;
        transition: all 0.2s;
    }

    .nav-link:hover {
        background-color: rgba(255, 255, 255, 0.1);
        color: #fff !important;
    }

    /* Sub-menu text nhỏ hơn chút */
    .nav-link.text-white-50 {
        font-size: 0.9rem;
        padding: 0.5rem 1rem;
    }
    
    .nav-link.text-white-50:hover {
        color: #fff !important;
        background-color: transparent; /* Submenu không cần background khi hover */
        padding-left: 1.2rem; /* Hiệu ứng đẩy nhẹ sang phải */
    }
    
    /* Xoay mũi tên khi mở dropdown (Option nâng cao) */
    .nav-link[aria-expanded="true"] .fa-chevron-down {
        transform: rotate(180deg);
        transition: transform 0.3s;
    }
</style>
